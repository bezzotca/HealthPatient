<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:vm="using:HealthPatient.ViewModels"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HealthPatient.Views.AdminRightsView"
			 x:DataType="vm:AdminRightsViewModel"
			 Background="#016D8A">
	<StackPanel HorizontalAlignment="Center"
				VerticalAlignment="Center">
		<StackPanel Spacing="20">
			<TextBlock Text="{Binding HelloMessage}"
					   FontSize="24"
						   FontFamily="Times New Roman"
						   FontWeight="Bold"
						   HorizontalAlignment="Center"
					   Foreground="White"/>
			<StackPanel Orientation="Horizontal"
						Spacing="3">
				<TextBlock Text="{Binding MrMrs}"
						   FontSize="24"
						   FontFamily="Times New Roman"
						   FontWeight="Normal"
						   HorizontalAlignment="Center"
						    Foreground="White"/>
				<TextBlock Text="{Binding Admin.FirstName}"
						   FontSize="24"
						   FontFamily="Times New Roman"
						   FontWeight="Normal"
						   HorizontalAlignment="Center"
						    Foreground="White"/>
			</StackPanel>
			<TextBlock Text="Выберите действие"
					   FontSize="24"
						   FontFamily="Times New Roman"
						   FontWeight="Bold"
						   HorizontalAlignment="Center"
					    Foreground="White"/>
			<StackPanel Orientation="Horizontal"
						Spacing="10">
				<Button Content="Редактировать профиль"
						HorizontalAlignment="Center"
						Command="{Binding Redact}"
						HorizontalContentAlignment="Center"
													Foreground="White"
													Background="#03B3BC"/>
				<Button Content="Добавить новость"
						HorizontalAlignment="Center"
						Command="{Binding AddNews}"
						HorizontalContentAlignment="Center"
													Foreground="White"
													Background="#03B3BC"/>
				<Button Content="Зарегистрировать пользователя"
						HorizontalAlignment="Center"
						Command="{Binding AddUser}"
						HorizontalContentAlignment="Center"
													Foreground="White"
													Background="#03B3BC"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal"
						Spacing="5">
				<Button Content="Импорт пациентов"
						HorizontalAlignment="Center"
						Command="{Binding ImportPatientsFromExcelAsync}"
						HorizontalContentAlignment="Center"
													Foreground="White"
													Background="#03B3BC"/>
				<Button Content="Импорт Врачей"
							HorizontalAlignment="Center"
							Command="{Binding ImportDoctorsFromExcelAsync}"
							HorizontalContentAlignment="Center"
														Foreground="White"
														Background="#03B3BC"/>
				<Button Content="Импорт слотов расписания"
							HorizontalAlignment="Center"
							Command="{Binding ImportDoctorSchedulesFromExcelAsync}"
							HorizontalContentAlignment="Center"
														Foreground="White"
														Background="#03B3BC"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal"
						Spacing="5">
				<Button Content="Экспорт пациентов"
						HorizontalAlignment="Center"
						Command="{Binding ExportPatientsToExcelAsync}"
						HorizontalContentAlignment="Center"
													Foreground="White"
													Background="#03B3BC"/>
				<Button Content="Экспорт Врачей"
							HorizontalAlignment="Center"
							Command="{Binding ExportDoctorsToExcelAsync}"
							HorizontalContentAlignment="Center"
														Foreground="White"
														Background="#03B3BC"/>
				<Button Content="Статистика"
							HorizontalAlignment="Center"
							Command="{Binding GoToDiagrams}"
							HorizontalContentAlignment="Center"
														Foreground="White"
														Background="#03B3BC"/>
			</StackPanel>

		</StackPanel>
	</StackPanel>
</UserControl>
